<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pais_Crear">

  <TextView
      android:id="@+id/txtDatos"
      android:layout_width="164dp"
      android:layout_height="27dp"
      android:text="Ingresa los datos del pais: "
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.117"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.052" />

  <TextView
      android:id="@+id/txtNombrePais"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="48dp"
      android:text="Nombre:"
      app:layout_constraintEnd_toEndOf="@+id/txtCodIso"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/txtCodIso"
      app:layout_constraintTop_toBottomOf="@+id/txtCodIso" />

  <TextView
      android:id="@+id/txtCodIso"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:text="CÃ³digo ISO:"
      app:layout_constraintEnd_toEndOf="@+id/txtDatos"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/txtDatos"
      app:layout_constraintTop_toBottomOf="@+id/txtDatos" />

  <TextView
      android:id="@+id/txtPibPais"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="68dp"
      android:text="PIB Nominal:"
      app:layout_constraintEnd_toEndOf="@+id/txtNombrePais"
      app:layout_constraintHorizontal_bias="0.269"
      app:layout_constraintStart_toStartOf="@+id/txtNombrePais"
      app:layout_constraintTop_toBottomOf="@+id/txtNombrePais" />

  <TextView
      android:id="@+id/txtMiembroONU"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="72dp"
      android:text="Es miembro de la ONU: "
      app:layout_constraintEnd_toEndOf="@+id/txtSimDinero"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/txtSimDinero"
      app:layout_constraintTop_toBottomOf="@+id/txtSimDinero" />

  <TextView
      android:id="@+id/txtSimDinero"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="76dp"
      android:text="Simbolo de la moneda local: "
      app:layout_constraintEnd_toEndOf="@+id/txtPibPais"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/txtPibPais"
      app:layout_constraintTop_toBottomOf="@+id/txtPibPais" />

  <EditText
      android:id="@+id/etxCodIso"
      android:layout_width="157dp"
      android:layout_height="53dp"
      android:layout_marginStart="28dp"
      android:ems="10"
      android:hint="112"
      android:inputType="number"
      app:layout_constraintBottom_toBottomOf="@+id/txtCodIso"
      app:layout_constraintStart_toEndOf="@+id/txtCodIso"
      app:layout_constraintTop_toTopOf="@+id/txtCodIso"
      app:layout_constraintVertical_bias="0.588" />

  <EditText
      android:id="@+id/etxNombrePais"
      android:layout_width="262dp"
      android:layout_height="73dp"
      android:layout_marginStart="44dp"
      android:ems="10"
      android:hint="Ejm. Corea del Sur"
      android:inputType="text"
      app:layout_constraintBottom_toBottomOf="@+id/txtNombrePais"
      app:layout_constraintStart_toEndOf="@+id/txtNombrePais"
      app:layout_constraintTop_toTopOf="@+id/txtNombrePais" />

  <EditText
      android:id="@+id/etxPibPais"
      android:layout_width="239dp"
      android:layout_height="58dp"
      android:layout_marginStart="24dp"
      android:ems="10"
      android:hint="Ejm. 124.00"
      android:inputType="numberDecimal"
      app:layout_constraintBottom_toBottomOf="@+id/txtPibPais"
      app:layout_constraintStart_toEndOf="@+id/txtPibPais"
      app:layout_constraintTop_toTopOf="@+id/txtPibPais"
      app:layout_constraintVertical_bias="0.461" />

  <EditText
      android:id="@+id/etxSimDinero"
      android:layout_width="155dp"
      android:layout_height="49dp"
      android:layout_marginStart="32dp"
      android:ems="10"
      android:inputType="text"
      android:text="Ejm: $"
      app:layout_constraintBottom_toBottomOf="@+id/txtSimDinero"
      app:layout_constraintStart_toEndOf="@+id/txtSimDinero"
      app:layout_constraintTop_toTopOf="@+id/txtSimDinero"
      app:layout_constraintVertical_bias="0.433" />

  <Spinner
      android:id="@+id/spMiembroONU"
      android:layout_width="171dp"
      android:layout_height="51dp"
      android:layout_marginStart="44dp"
      app:layout_constraintBottom_toBottomOf="@+id/txtMiembroONU"
      app:layout_constraintStart_toEndOf="@+id/txtMiembroONU"
      app:layout_constraintTop_toTopOf="@+id/txtMiembroONU"
      app:layout_constraintVertical_bias="0.312" />

  <Button
      android:id="@+id/btnGuardarPais"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Guardar"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.919"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.859" />

</androidx.constraintlayout.widget.ConstraintLayout>